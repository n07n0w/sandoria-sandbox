# Environment Configuration Template
# Copy this to .env for local development
# Set these as environment variables in your cloud deployment

# Application Settings
NODE_ENV=production
PORT=3000
BASE_URL=https://sandoria.org
SESSION_SECRET=your-secure-session-secret-here

# Database Configuration (Option 1: Individual variables)
DB_HOST=your-database-host
DB_PORT=3306
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=sandbox

# Database Configuration (Option 2: Full URL - takes priority over individual vars)
# JAWSDB_MARIA_URL=mysql://user:password@host:port/database
# JAWSDB_URL=mysql://user:password@host:port/database

# Peer Server Configuration
PEER_SERVER_HOST=peer-server.sandoria.org
PEER_SERVER_PORT=80
PEER_SERVER_PATH=/
PEER_SERVER_SECURE=false

# Optional Settings
INIT_DB=true
HTTPS=true
