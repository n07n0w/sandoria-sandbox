head
  style.
    :root {
    --header-height: 14vh;
    --main-height: calc(98vh - var(--header-height));
    }
    div {
    border: none;
    }
    .all {
    position: relative;
    width: 100%;
    height: 100%;
    }
    .top {
    position: sticky;
    width: 100%;
    height: var(--header-height);
    border-bottom: 1px solid black;
    }
    .main {
    height: var(--main-height);
    width: 100%;
    background-color: gray;
    overflow: hidden;
    }
    .content {
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    padding-right: 17px; /* Increase/decrease this value for cross-browser compatibility */
    box-sizing: content-box; /* So the width will be 100% + 17px */
    }
.all
  .top
  .main
    .content
